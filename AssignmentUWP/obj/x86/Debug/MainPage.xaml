<Page x:ConnectionId='1'
    x:Class="AssignmentUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AssignmentUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <ScrollViewer>
        <StackPanel>
            <GridView x:ConnectionId='2' ItemsSource="{Binding collection}" x:Name="APIGridView" 
                      HorizontalAlignment="Center">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="Brown">
                            <TextBlock Name="TitleTextBlock" Text="{Binding title.rendered}"/>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </StackPanel>
    </ScrollViewer>

    <!--<StackPanel HorizontalAlignment="Center" Background="Brown">
        <TextBlock />
    </StackPanel>-->
</Page>

